# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://xdrive:password@postgres:5432/xdrive_db

# JWT Secret (generate a random string for production)
JWT_SECRET=your-secret-key-change-in-production

# Password Hashing
BCRYPT_ROUNDS=12

# Email Verification
VERIFY_TOKEN_EXPIRES_MIN=60

# Application URL (for email verification links)
APP_BASE_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:3000

# SendGrid SMTP Configuration (example)
# If not configured, emails will be logged to console instead
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=SG.your-sendgrid-api-key-here

# Email From Address
EMAIL_FROM="XDrive Logistics <noreply@xdrivelogistics.co.uk>"

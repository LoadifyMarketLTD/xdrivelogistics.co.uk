# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/xdrive

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# JWT Secret (change in production!)
JWT_SECRET=your-secret-key-change-me-in-production

# Bcrypt
BCRYPT_ROUNDS=10

# Email Configuration (optional - will log to console if not configured)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
EMAIL_FROM=noreply@xdrivelogistics.co.uk

# App Base URL (for email verification links)
APP_BASE_URL=http://localhost:3000

# Verification Token Expiry (minutes)
VERIFY_TOKEN_EXPIRES_MIN=60

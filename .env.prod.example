# Production environment variables template
# Copy to .env.prod and fill in real values
# DO NOT commit .env.prod to version control

# Backend API Configuration
PORT=3001
NODE_ENV=production

# Database (Production PostgreSQL with SSL)
DATABASE_URL=postgresql://user:password@host:5432/xdrive_db?sslmode=require

# JWT Secret (generate a strong random string - use: openssl rand -base64 32)
JWT_SECRET=generate-a-strong-random-secret-here

# Password Hashing
BCRYPT_ROUNDS=12

# Email Verification
VERIFY_TOKEN_EXPIRES_MIN=60

# Application URL (for email verification links)
APP_BASE_URL=https://xdrivelogistics.co.uk

# CORS (production frontend domain)
CORS_ORIGIN=https://xdrivelogistics.co.uk

# SendGrid SMTP Configuration
# Production Environment Variables Template
# Copy this file and fill in your production values
# NEVER commit actual .env files to version control

# Database Configuration
DATABASE_URL=postgresql://username:password@production-host:5432/xdrive_prod

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS - Set to your production frontend URL
CORS_ORIGIN=https://xdrivelogistics.co.uk

# JWT Secret - MUST be a strong random string in production
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-IN-PRODUCTION

# Bcrypt - Higher rounds for production (10-12)
BCRYPT_ROUNDS=12

# Email Configuration - Required for production
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=SG.your-production-sendgrid-api-key-here

# Email From Address
EMAIL_FROM="XDrive Logistics <noreply@xdrivelogistics.co.uk>"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info

# Next.js Configuration (if using)
NEXT_PUBLIC_API_URL=https://api.xdrivelogistics.co.uk
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SMTP_PASS=your-sendgrid-api-key
EMAIL_FROM=noreply@xdrivelogistics.co.uk

# App Base URL - Your production frontend URL
APP_BASE_URL=https://xdrivelogistics.co.uk

# Verification Token Expiry (minutes)
VERIFY_TOKEN_EXPIRES_MIN=60


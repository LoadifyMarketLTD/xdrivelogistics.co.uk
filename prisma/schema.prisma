// Minimal Prisma schema for XDrive Logistics
// This schema only enables prisma generate to run successfully.
// Note: This application uses Supabase, not Prisma, for database operations.
// This file exists only to satisfy the Netlify build process.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Dummy model to allow prisma generate to succeed
model DummyModel {
  id Int @id @default(autoincrement())
}
